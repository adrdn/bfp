{{ define "Detail" }}
<!DOCTYPE html>
<html lang="en-US">
    <head></head>
    <body>
        <div class="type">
            <p>Flow Name: <b>{{ .Type }}</b></p>
        </div>
        <div class="routing">
            <p>Current Step: {{ .CurrentStep }}</p>
            <p>Prior Step: <b>{{ .PriorStep }}</b> & Next Step: <b>{{ .NextStep }}</b></p>
        </div>
        <div class="description">
            <p>Notes from Previous Step:<br>
                <b>{{ .Description }}</b>
            </p>
        </div>
        <form method="POST" action="/request/update?id={{ .ID }}&cs={{ .CurrentStep }}" id="request">
            <div class="myD1iscription">
                <p>Your Notes[optional]:</p>
                <textarea name="description" cols="70" rows="10"></textarea>
            </div>
            <div class="decision">
                <input type="radio" name="decision" value="approve">Approve<br>
                <input type="radio" name="decision" value="reject">Reject<br>
                {{ if eq .IsFirstStep true}}
                <input type="radio" name="decision" value="terminate">Terminate
                {{ end }}
            </div>
        </form><br>
        <button type="submit" form="request" autofocus>Submit</button>
    </body>
</html>
{{ end }}